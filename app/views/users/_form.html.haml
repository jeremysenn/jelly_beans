= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  = f.hidden_field :company_id, value: current_company.id
  .form-group.row
    %label.required.col-sm-2.form-control-label{:for => "first_name"} First Name
    .col-sm-6
      = f.text_field :first_name, class: 'form-control form-control-lg', placeholder: 'First Name', required: true
  .form-group.row
    %label.required.col-sm-2.form-control-label{:for => "last_name"} Last Name
    .col-sm-6
      = f.text_field :last_name, class: 'form-control form-control-lg', placeholder: 'Last Name', required: true
  .form-group.row
    %label.required.col-sm-2.form-control-label{:for => "email"} Email
    .col-sm-6
      = f.text_field :email, class: 'form-control form-control-lg', placeholder: 'Email', required: true
  .form-group.row
    %label.required.col-sm-2.form-control-label{:for => "phone"} Phone
    .col-sm-6
      = f.text_field :phone, class: 'form-control form-control-lg', placeholder: 'Phone'
  .form-group.row
    .col-sm-offset-2.col-sm-10
      %button.btn.btn-primary.btn-lg{:type => "submit"} Save
