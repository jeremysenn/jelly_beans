#add_commodity_item.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "add_commodity_item_label", :role => "dialog"}
  .modal-dialog.modal-sm{:role => "document"}
    .modal-content
      -#
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4#add_commodity_item_label.modal-title New Commodity Item
      .modal-body
        = form_for(CommodityItem.new) do |form|
          = form.hidden_field :transaction_id, value: @transaction.id
          .form-group.row
            .col-sm-12
              = form.select :commodity_id, options_from_collection_for_select(current_company.commodities, :id, :name), {prompt: "Select commodity"}, {style: 'width: 100%', :class => "form-control form-control-lg"}
          -#
            .form-group.row
              .col-sm-12
                = form.text_field :total, class: 'form-control form-control-lg', placeholder: 'Total', required: true
          .modal-footer
            %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
            %button.btn.btn-primary{:type => "submit"} Save